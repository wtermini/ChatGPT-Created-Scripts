  stages {
    stage('Build and Push Docker Image') {
      steps {
        script {
          docker.withRegistry(env.registryURL, env.registryCredentialsID) {
            def customImage = docker.build("${env.registryURL}/${env.imageName}:${env.BUILD_NUMBER}")
            customImage.push()
          }
        }
      }
    }
  }
}
